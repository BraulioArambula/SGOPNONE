@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/layout_login.cshtml";
    var aux = ViewBag.aux;
}

<div class="row mt-5 w-75 mx-auto py-3" style="background-color: rgba(0, 0, 0, 0.55);">
    <!--Inicia el renglon sombreado-->
    <!---------------------------------------------------------------------------------------------------------------->
    <div class="col-3" style="opacity: 1;">
        <!--Card para redirigirnos al menu de comercializadora-->
        @foreach (var i in aux)
        {
            if (i == 2)
            {
                <div class="card border border-0">
                    <div class="card-header"><h5 class="text-center">Comercializadora</h5></div>
                    <div class="card-body"><br><br><br><br><br><br><br><br><br></div>
                    <div class="card-footer bg-dark"><button type="button" class="btn btn-outline-success w-100 h-100">ACCEDER</button></div>
                </div>
            }

        }

    </div>
    <!---------------------------------------------------------------------------------------------------------------->
    <div class="col-1"></div>
    <!---------------------------------------------------------------------------------------------------------------->
    <div class="col-4" style="opacity: 1;">
        <!--Card para redirigirnos al menu de constructora-->
        @foreach (var i in aux)
        {
            if (i == 1)
            {
                <div class="card border border-0">
                    <div class="card-header"><h5 class="text-center">Constructora</h5></div>
                    <div class="card-body"><br><br><br><br><br><br><br><br><br></div>
                    <div class="card-footer bg-dark">
                        @using (Html.BeginForm("PrincipalConstructora", "Constructora"))
                        {
                            <button type="submit" class="btn btn-outline-success w-100 h-100">ACCEDER</button>
                        }
                    </div>
                </div>
            }

        }
    </div>
    <!---------------------------------------------------------------------------------------------------------------->
    <div class="col-1"></div>
    <!---------------------------------------------------------------------------------------------------------------->
    <div class="col-3" style="opacity: 1;">
        <!--Card para redirigirnos al menu de inmobiliaria-->
        @foreach (var i in aux)
        {
            if (i == 3)
            {
                <div class="card border border-0">
                    <div class="card-header"><h5 class="text-center">Inmobiliaria</h5></div>
                    <div class="card-body"><br><br><br><br><br><br><br><br><br></div>
                    <div class="card-footer bg-dark">

                        <button type="submit" class="btn btn-outline-success w-100 h-100">ACCEDER</button>

                    </div>
                </div>
            }

        }
    </div>
    <!---------------------------------------------------------------------------------------------------------------->
</div><!--Termina el renglon sombreado-->
