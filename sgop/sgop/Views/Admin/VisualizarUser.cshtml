@model  sgop.Models.ViewModels.UserViewModel
@{
    ViewBag.Title = "VisualizarUser";
    Layout = "~/Views/Shared/layout_admin.cshtml";
}


<div class="card shadow-lg m-5 mx-auto w-75 border border-0">
    <!--Inicia el CARD-->
    <!---------------------------------------------------------------------------------------------------------------->
    <div class="card-header text-right">
        <!--Inicia la cabecera del CARD-->
        <h2 class="text-muted font-weight-bolder">Visualizar Usuario</h2><!--Titulo de la cabecera del card-->
    </div><!--Termina la cabecera del CARD-->
    <!---------------------------------------------------------------------------------------------------------------->
    <div class="card-body border border-right-0 border-left-0 border-info">
        <form method="post" action="Index">
            <!--Inicia el cuerpo del CARD-->
            <div class="row">

                <div class="col-6">
                    <!--Inicia columna con los campos del lado izquierdo-->
                    <!---------------------------------------------------------------------------------------------------------------->
                    <div class="row">
                        <div class="col-12 text-center">
                            <h3 class="text-muted font-weight-bold">Datos de Usuario</h3><!--Titulo para la columna del lado derecho-->
                        </div>
                    </div>
                    <!---------------------------------------------------------------------------------------------------------------->
                    <div class="row">
                        @{ var nombre = Model.nombre + " " + Model.apellidoPaterno + " " + Model.apellidoMaterno; }
                        <div class="col-8 mx-auto my-1">
                            @Html.Label(nombre, "Nombre:")
                            @Html.TextBox(nombre, nombre, new { @class = "form-control form-control-sm", @readonly = "readonly" })
                            <!--Tabla usuarios -> campo nombre. Limitar a 20 caracteres-->
                        </div>
                    </div>
                    <!---------------------------------------------------------------------------------------------------------------->
                    <!---------------------------------------------------------------------------------------------------------------->
                    <div class="row">
                        <div class="col-8 mx-auto my-1">
                            @Html.LabelFor(d => d.correo, "Correo Electronico:")
                            @Html.TextBoxFor(d => d.correo, new { @class = "form-control form-control-sm", @readonly = "readonly" })
                            <!--Tabla usuarios -> campo correo. Limitar a 30 caracteres-->
                        </div>
                    </div>
                    <!---------------------------------------------------------------------------------------------------------------->
                    <div class="row">
                        <div class="col-8 mx-auto my-1">
                            @Html.LabelFor(d => d.usuario, "Usuario:")
                            @Html.TextBoxFor(d => d.usuario, new { @class = "form-control form-control-sm", @readonly = "readonly" })
                            <!--Tabla usuarios -> campo usuario. Limitar a 20 caracteres-->
                        </div>
                    </div>
                </div><!--Termina columna con los campos del lado izquierdo-->
                <!---------------------------------------------------------------------------------------------------------------->
                <div class="col-6 border border-info border-right-0 border-top-0 border-bottom-0">
                    <!--Inician los campos de la columna derecha-->
                    <!---------------------------------------------------------------------------------------------------------------->
                    <div class="row">
                        <div class="col-12 text-center">
                            <h3 class="text-muted font-weight-bold">Fotografía</h3><!--Titulo de la columna derecha-->
                        </div>
                    </div><br>
                    <!--
                    <div class="row">
                        <div class="col-12 pl-3">
                            <table class="table table-borderless table-sm table-hover">
                                <tbody>

                                    <tr class="text-center">
                                        <td class="text-left text-dark font-weight-bold">CONSTRUCTORA:</td>
                                        <td>

                                        </td>
                                    </tr>



                                    <tr class="text-center">
                                        <td class="text-left text-dark font-weight-bold">COMERCIALIZADORA:</td>
                                        <td>

                                        </td>
                                    </tr>


                                    <tr class="text-center">
                                        <td class="text-left text-dark font-weight-bold">INMOBILIARIA:</td>
                                        <td>

                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    </div><!--Termina la la fila de la tabla-->
                    <!---------------------------------------------------------------------------------------------------------------->
                    <div class="row">
                        <div class="col-12">
                            <img src="@Url.Action(" MostrarImg", "Admin" , new { user=Model.usuario })" style="border:black 8px solid;  width: 170px; height: 170px; display:block; margin:auto;" alt="Alternate Text" />
                        </div>
                    </div>
                    <!---------------------------------------------------------------------------------------------------------------->
                    <div class="row mt-3">
                        <div class="col-3"></div>
                        <div class="col-6">
                            <button type="submit" class="btn btn-warning btn-block btn-sm">REGRESAR<span class="fas fa-arrow-left mx-1"></span></button>
                            <!--Boton que hace el submit del formulario crearUsuario-->
                        </div>
                        <div class="col-3"></div>
                    </div>
                    <!---------------------------------------------------------------------------------------------------------------->
                </div><!--Termina la columna derecha-->
            </div><!--Termina el renglon de los campos-->
        </form>
    </div><!--Termina el card body-->
    <!---------------------------------------------------------------------------------------------------------------->
    <div class="card-footer bg-dark">
        <!--Inicia el footer con la marca de agua propia de la empresa-->
        <div class="row">
            <div class="col-12 text-center">
                <h6 class="text-muted font-weight-bold">PineAPPs</h6>
            </div>
        </div>
